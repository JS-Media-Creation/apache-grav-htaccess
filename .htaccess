<IfModule mod_rewrite.c>

RewriteEngine On
RewriteCond %{HTTP_HOST} ^www\.your-domain\.de [NC]
RewriteRule ^(.*)$ http://your-domain.de/$1 [L,R=301]

# Aktivieren des Expires-Moduls
<IfModule mod_expires.c>
    ExpiresActive On

    # Bilder
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/x-icon "access plus 1 year"

    # Schriftarten
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType font/ttf "access plus 1 year"
    ExpiresByType font/eot "access plus 1 year"
    ExpiresByType application/x-font-woff "access plus 1 year"
    ExpiresByType application/x-font-ttf "access plus 1 year"
    ExpiresByType application/vnd.ms-fontobject "access plus 1 year"

    # CSS und JS
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType application/javascript "access plus 1 year"
    ExpiresByType application/x-javascript "access plus 1 year"

    # HTML-Dateien
    ExpiresByType text/html "access plus 1 hour"

    # Videos
    ExpiresByType video/mp4 "access plus 1 year"
    ExpiresByType video/webm "access plus 1 year"
    ExpiresByType video/ogg "access plus 1 year"
    ExpiresByType video/quicktime "access plus 1 year"
    ExpiresByType video/x-ms-wmv "access plus 1 year"
    ExpiresByType video/x-flv "access plus 1 year"
    ExpiresByType video/x-matroska "access plus 1 year"
</IfModule>

# Begin: Grav specific cache settings
<IfModule mod_headers.c>
    # Images
    <FilesMatch "\.(jpg|jpeg|png|gif|webp|svg|ico)$">
        Header set Cache-Control "public, max-age=31536000, must-revalidate"
    </FilesMatch>

    # Fonts
    <FilesMatch "\.(woff|woff2|ttf|eot)$">
        Header set Cache-Control "public, max-age=31536000, must-revalidate"
    </FilesMatch>

    # CSS and JS
    <FilesMatch "\.(css|js)$">
        Header set Cache-Control "public, max-age=31536000, must-revalidate"
    </FilesMatch>

    # HTML
    <FilesMatch "\.(html)$">
        Header set Cache-Control "no-cache, must-revalidate"
    </FilesMatch>

    # Videos
    <FilesMatch "\.(mp4|webm|ogg|quicktime|wmv|flv|mkv)$">
        Header set Cache-Control "public, max-age=31536000, must-revalidate"
    </FilesMatch>
</IfModule>

# Enable ETag and Last-Modified headers
<IfModule mod_headers.c>
    Header unset ETag
    FileETag All
    Header set Last-Modified "%{FILEPATH}e"
</IfModule>

